/* pages/home/home.wxss */
.home {
  margin: 10rpx;
}
.home .home-page-header {
  background: linear-gradient(#fff, #f5f5f5);
}
.home .index_swiper swiper {
  width: 720rpx;
  height: 360rpx;
}
.home .index_swiper swiper swiper-item image {
  width: 100%;
}
.home .index_mainType {
  padding-top: 20rpx;
  background-color: #f7f7f7;
}
.home .index_mainType .maintypeRow {
  display: flex;
}
.home .index_mainType .maintypeRow navigator {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: end;
  /* 行与行之间留有均匀间隔。 */
}
.home .index_mainType .maintypeRow navigator image {
  width: 100rpx;
  text-align: center;
  align-items: center;
}
.home .index_goodsTop .goodsTopTitle {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
  color: var(--themeColor);
  background-color: #e0e0e0;
  text-align: center;
}
.home .index_goodsTop .goodsTopList {
  display: flex;
  flex-wrap: wrap;
}
.home .index_goodsTop .goodsTopList .goodsTopDetail {
  margin: 15rpx;
  width: 40%;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.home .index_goodsTop .goodsTopList .goodsTopDetail navigator image {
  width: 100%;
  background-color: #f5f5f5;
}
.home .index_goodsTop .goodsTopList .goodsTopDetail navigator .goodsTopName {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.home .index_goodsTop .goodsTopList .goodsTopDetail navigator .goodsTopPrice {
  color: var(--themeColor);
}
